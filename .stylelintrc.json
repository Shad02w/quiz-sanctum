{
    "extends": "stylelint-config-standard",
    "rules": {
        "indentation": 4,
        "comment-whitespace-inside": null,
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "variants",
                    "responsive",
                    "screen",
                    "layer"
                ]
            }
        ],
        "declaration-block-semicolon-space-after": null,
        "no-descending-specificity": null
    }
}